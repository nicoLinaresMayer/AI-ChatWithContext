public with sharing class DocumentController {
    
   @AuraEnabled(cacheable=true)
    public static List<Document__c> getDocumentsByType(String documentType){
        List<Document__c> documents = new List<Document__c>();
        try{
            documents = DocumentService.getDocumentsByType(documentType);
        }
        catch (Exception e) {
            throw new AuraHandledException(e.getMessage());
        }

        return documents;
    }

    @AuraEnabled(cacheable=true)
    public static List<Section__c> getDocumentSections(String documentId){
        List<Section__c> documentSections = new List<Section__c>();
            try{
                documentSections = DocumentService.getDocumentSections(documentId);
            }
            catch (Exception e) {
                throw new AuraHandledException(e.getMessage());
            }

            return documentSections;
        }


    @AuraEnabled
    public static void updateDocument(String sectionToUpdate, String response){
        try{
            DocumentService.updateDocument(sectionToUpdate,response);
        }
        catch (Exception e) {
            throw new AuraHandledException(e.getMessage());
        }
    }

    @AuraEnabled(cacheable=true)
    public static List<String> getDocumentTypes(){
        return DocumentService.getDocumentTypes();
    }
    @AuraEnabled
    public static void autoGenerateDocument(Id documentId,Id sessionId, String model,Decimal temperature){
        DocumentService.autoGenerateDocument(documentId, sessionId, model, temperature);
    }
}